                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number",
                                                    "example": 1
                                                },
                                                "username": {
                                                    "type": "string",
                                                    "example": "udin"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "example": "udin@gmail.com"
                                                },
                                                "token": {
                                                    "type": "string",
                                                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6MSwidXNlcm5hbWUiOiJ1ZGluIiwiZW1haWwiOiJ1ZGluQGdtYWlsLmNvbSIsImV4cCI6MTY0OTMxNjUxMn0.QprXHN_nJk8xlvM482QkJh6WdjA8QZTqKK7M0Yger-0"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
